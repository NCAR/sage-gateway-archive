<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.0.xsd" logicalFilePath="/Liquibase/update/changesets/20100806-SGF-1559.xml">

    <changeSet author="ejn" id="20100806-SGF-1559">

        <addColumn schemaName="metadata" tableName="dataset">
            <column name="is_replica" type="boolean" defaultValue="false">
                <constraints nullable="false" />
            </column>
        </addColumn>

        <sql>
            UPDATE metadata.dataset
            SET is_replica = true
            WHERE replica_source_gateway_name IS NOT NULL;
        </sql>

    </changeSet>


</databaseChangeLog>