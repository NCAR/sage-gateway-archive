        <appender-ref ref="stdout"/>
    </logger>

    <logger name="sgf.gateway.integration.ade.opensearch.receiver.Receiver" level="INFO" additivity="false">
        <appender-ref ref="stdout"/>
    </logger>

    <logger name="sgf.gateway.integration.service.RemoteIndexableLoadService" level="WARN" additivity="false">
        <appender-ref ref="stdout"/>
    </logger>

    <logger name="esg.saml.authz.service" level="WARN" additivity="false">
        <appender-ref ref="stdout"/>
    </logger>

    <logger name="sgf.gateway.saml.attr.service" level="WARN" additivity="false">
        <appender-ref ref="stdout"/>
    </logger>

    <root level="WARN">
        <appender-ref ref="stdout"/>
    </root>

    <!--integration loggers-->
    <appender name="tdsMetrics" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%msg%n</pattern>
        </encoder>
    </appender>

    <logger name="tdsMetricsErrorLog" level="ERROR" additivity="false">
        <appender-ref ref="tdsMetrics"/>
    </logger>

    <appender name="gridFTPMetrics" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%msg%n</pattern>
        </encoder>
    </appender>

    <logger name="gridFTPMetricsErrorLog" level="ERROR" additivity="false">
        <appender-ref ref="gridFTPMetrics"/>
    </logger>

</configuration>
