<?xml version="1.0" encoding="UTF-8"?>

<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
                           http://www.springframework.org/schema/beans/spring-beans-4.0.xsd">

    <bean id="samlAuthorizationServiceSoapController" class="esg.saml.authz.web.SAMLAuthorizationServiceSoapController">
        <constructor-arg index="0" ref="samlAuthorizationService"/>
    </bean>

    <bean id="samlAttributeServiceSoapController" class="esg.saml.attr.web.SAMLAttributeServiceSoapController">
        <constructor-arg index="0" ref="samlAttributeService"/>
    </bean>

</beans>
