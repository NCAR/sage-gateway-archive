<?xml version="1.0" encoding="UTF-8"?>

<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
                           http://www.springframework.org/schema/beans/spring-beans-4.0.xsd">

    <bean id="togglzStateRepository" class="org.togglz.core.repository.file.FileBasedStateRepository">
        <constructor-arg>
            <bean class="java.io.File">
                <constructor-arg>
                    <bean class="java.lang.String">
                        <constructor-arg value="${gateway.home}/data/togglz/feature-state-repository.properties"/>
                    </bean>
                </constructor-arg>
            </bean>
        </constructor-arg>
    </bean>

    <bean id="togglzFeatureClass" class="org.springframework.beans.factory.config.MethodInvokingFactoryBean">
        <property name="staticMethod">
            <value>java.lang.Class.forName</value>
        </property>
        <property name="arguments">
            <list>
                <value>${feature.enum}</value>
            </list>
        </property>
    </bean>

    <bean id="togglzConfiguration" class="sgf.gateway.feature.TogglzConfiguration">
        <constructor-arg name="featureRepository" ref="togglzStateRepository"/>
        <constructor-arg name="userProvider">
            <bean class="sgf.gateway.feature.RootAdminFeatureAdminUserProvider">
                <constructor-arg name="userService" ref="runtimeUserService"/>
            </bean>
        </constructor-arg>
        <constructor-arg name="featureClass" ref="togglzFeatureClass"/>
    </bean>

</beans>
