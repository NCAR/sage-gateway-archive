<?xml version="1.0" encoding="UTF-8"?>

<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
                           http://www.springframework.org/schema/beans/spring-beans-4.0.xsd">

    <bean id="authorizationTokenRepository"
          class="sgf.gateway.dao.security.impl.hibernate.AuthorizationTokenRepositoryImpl">
        <property name="sessionFactory" ref="hibernateSessionFactory"/>
    </bean>

    <bean id="userRepository" class="sgf.gateway.dao.security.impl.hibernate.UserRepositoryImpl">
        <property name="sessionFactory" ref="hibernateSessionFactory"/>
    </bean>

    <bean id="groupRepository" class="sgf.gateway.dao.security.impl.hibernate.GroupRepositoryImpl">
        <property name="sessionFactory" ref="hibernateSessionFactory"/>
    </bean>

</beans>
