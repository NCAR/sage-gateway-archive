<?xml version="1.0" encoding="UTF-8"?>

<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
                           http://www.springframework.org/schema/beans/spring-beans-4.0.xsd">

    <bean id="datasetIdFieldExtractor" class="sgf.gateway.search.extract.dataset.DatasetIdFieldExtractor"/>
    <bean id="datasetTypeFieldExtractor" class="sgf.gateway.search.extract.dataset.DatasetTypeFieldExtractor">
        <constructor-arg index="0" ref="datasetDocumentType"/>
        <constructor-arg index="1" ref="projectDocumentType"/>
        <constructor-arg index="2" ref="softwareDocumentType"/>
    </bean>
    <bean id="datasetTitleFieldExtractor" class="sgf.gateway.search.extract.dataset.DatasetTitleFieldExtractor"/>
    <bean id="datasetDescriptionFieldExtractor"
          class="sgf.gateway.search.extract.dataset.DatasetDescriptionFieldExtractor"/>
    <bean id="datasetShortNameFieldExtractor"
          class="sgf.gateway.search.extract.dataset.DatasetShortNameFieldExtractor"/>
    <bean id="datasetExperimentsFieldExtractor"
          class="sgf.gateway.search.extract.dataset.DatasetExperimentsFieldExtractor"/>
    <bean id="datasetRealmsFieldExtractor" class="sgf.gateway.search.extract.dataset.DatasetRealmsFieldExtractor"/>
    <bean id="datasetProjectsFieldExtractor" class="sgf.gateway.search.extract.dataset.DatasetProjectsFieldExtractor"/>
    <bean id="datasetInstituteFieldExtractor"
          class="sgf.gateway.search.extract.dataset.DatasetInstitutionFieldExtractor"/>
    <bean id="datasetModelFieldExtractor" class="sgf.gateway.search.extract.dataset.DatasetModelFieldExtractor"/>
    <bean id="datasetFrequenciesFieldExtractor"
          class="sgf.gateway.search.extract.dataset.DatasetFrequenciesFieldExtractor"/>
    <bean id="datasetProductTypeFieldExtractor"
          class="sgf.gateway.search.extract.dataset.DatasetDataProductTypeFieldExtractor"/>
    <bean id="datasetVariablesFieldExtractor"
          class="sgf.gateway.search.extract.dataset.DatasetStandardVariablesFieldExtractor"/>
    <bean id="datasetVariableShortNamesFieldExtractor"
          class="sgf.gateway.search.extract.dataset.DatasetShortVariablesFieldExtractor"/>
    <bean id="datasetEnsembleFieldExtractor" class="sgf.gateway.search.extract.dataset.DatasetEnsembleFieldExtractor"/>
    <bean id="datasetDOIExtractor" class="sgf.gateway.search.extract.dataset.DatasetDOIExtractor"/>

    <bean id="datasetSearchDocumentExtractor" class="sgf.gateway.search.extract.SearchDocumentExtractorImpl">
        <constructor-arg>
            <list>
                <bean class="sgf.gateway.search.extract.SearchFieldExtractorImpl">
                    <constructor-arg index="0" ref="idField"/>
                    <constructor-arg index="1" ref="datasetIdFieldExtractor"/>
                </bean>
                <bean class="sgf.gateway.search.extract.SearchFieldExtractorImpl">
                    <constructor-arg index="0" ref="typeField"/>
                    <constructor-arg index="1" ref="datasetTypeFieldExtractor"/>
                </bean>
                <bean class="sgf.gateway.search.extract.SearchFieldExtractorImpl">
                    <constructor-arg index="0" ref="nameField"/>
                    <constructor-arg index="1" ref="datasetTitleFieldExtractor"/>
                </bean>
                <bean class="sgf.gateway.search.extract.SearchFieldExtractorImpl">
                    <constructor-arg index="0" ref="descriptionField"/>
                    <constructor-arg index="1" ref="datasetDescriptionFieldExtractor"/>
                </bean>
                <bean class="sgf.gateway.search.extract.SearchFieldExtractorImpl">
                    <constructor-arg index="0" ref="shortNameField"/>
                    <constructor-arg index="1" ref="datasetShortNameFieldExtractor"/>
                </bean>
                <bean class="sgf.gateway.search.extract.SearchFieldExtractorImpl">
                    <constructor-arg index="0" ref="experimentField"/>
                    <constructor-arg index="1" ref="datasetExperimentsFieldExtractor"/>
                </bean>
                <bean class="sgf.gateway.search.extract.SearchFieldExtractorImpl">
                    <constructor-arg index="0" ref="realmField"/>
                    <constructor-arg index="1" ref="datasetRealmsFieldExtractor"/>
                </bean>
                <bean class="sgf.gateway.search.extract.SearchFieldExtractorImpl">
                    <constructor-arg index="0" ref="projectField"/>
                    <constructor-arg index="1" ref="datasetProjectsFieldExtractor"/>
                </bean>
                <bean class="sgf.gateway.search.extract.SearchFieldExtractorImpl">
                    <constructor-arg index="0" ref="instituteField"/>
                    <constructor-arg index="1" ref="datasetInstituteFieldExtractor"/>
                </bean>
                <bean class="sgf.gateway.search.extract.SearchFieldExtractorImpl">
                    <constructor-arg index="0" ref="modelField"/>
                    <constructor-arg index="1" ref="datasetModelFieldExtractor"/>
                </bean>
                <bean class="sgf.gateway.search.extract.SearchFieldExtractorImpl">
                    <constructor-arg index="0" ref="frequencyField"/>
                    <constructor-arg index="1" ref="datasetFrequenciesFieldExtractor"/>
                </bean>
                <bean class="sgf.gateway.search.extract.SearchFieldExtractorImpl">
                    <constructor-arg index="0" ref="productTypeField"/>
                    <constructor-arg index="1" ref="datasetProductTypeFieldExtractor"/>
                </bean>
                <bean class="sgf.gateway.search.extract.SearchFieldExtractorImpl">
                    <constructor-arg index="0" ref="variableField"/>
                    <constructor-arg index="1" ref="datasetVariablesFieldExtractor"/>
                </bean>
                <bean class="sgf.gateway.search.extract.SearchFieldExtractorImpl">
                    <constructor-arg index="0" ref="variableShortNameField"/>
                    <constructor-arg index="1" ref="datasetVariableShortNamesFieldExtractor"/>
                </bean>
                <bean class="sgf.gateway.search.extract.SearchFieldExtractorImpl">
                    <constructor-arg index="0" ref="ensembleField"/>
                    <constructor-arg index="1" ref="datasetEnsembleFieldExtractor"/>
                </bean>
                <bean class="sgf.gateway.search.extract.SearchFieldExtractorImpl">
                    <constructor-arg index="0" ref="doiField"/>
                    <constructor-arg index="1" ref="datasetDOIExtractor"/>
                </bean>
            </list>
        </constructor-arg>
    </bean>

    <bean id="datasetSearchDocumentExtractorDeletion" class="sgf.gateway.search.extract.SearchDocumentExtractorImpl">
        <constructor-arg>
            <list>
                <bean class="sgf.gateway.search.extract.SearchFieldExtractorImpl">
                    <constructor-arg index="0" ref="idField"/>
                    <constructor-arg index="1" ref="datasetIdFieldExtractor"/>
                </bean>
            </list>
        </constructor-arg>
    </bean>

</beans>
