<?xml version="1.0" encoding="UTF-8"?>

<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
                           http://www.springframework.org/schema/beans/spring-beans-4.0.xsd">

    <bean id="searchController" class="sgf.gateway.web.controllers.search.SearchController">
        <constructor-arg index="0" ref="userSearchQuery"/>
        <constructor-arg index="1" value="${views.search}"/>
        <constructor-arg index="2" ref="facetNames"/>
        <property name="resultsPerPageValues" value="${search.ui.rpp.options}"/>
    </bean>

    <bean id="analyticalSearchController" class="sgf.gateway.web.controllers.search.AnalyticalSearchController">
        <constructor-arg index="0" ref="analyticalSearchQuery"/>
    </bean>

</beans>
