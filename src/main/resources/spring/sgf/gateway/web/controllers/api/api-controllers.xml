<?xml version="1.0" encoding="UTF-8"?>

<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
                           http://www.springframework.org/schema/beans/spring-beans-4.0.xsd">

    <bean id="apiFileController" class="sgf.gateway.web.controllers.api.dataset.file.FileController">
        <constructor-arg index="0" ref="logicalFileService"/>
        <constructor-arg index="1" ref="authorizationUtils"/>
        <constructor-arg index="2" ref="httpEndpointStrategy"/>
        <constructor-arg index="3" ref="exceptionHandlingService"/>
    </bean>

</beans>
