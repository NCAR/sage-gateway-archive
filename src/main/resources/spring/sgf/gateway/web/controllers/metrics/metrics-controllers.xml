<?xml version="1.0" encoding="UTF-8"?>

<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
                           http://www.springframework.org/schema/beans/spring-beans-4.0.xsd">

    <bean id="googleAnalyticsController" class="sgf.gateway.web.controllers.metrics.GoogleAnalyticsController">
        <constructor-arg index="0" value="${google.analytics.enabled}"/>
        <constructor-arg index="1" value="${google.analytics.tracking.id}"/>
        <constructor-arg index="2" ref="gateway"/>
    </bean>

    <bean id="offsiteLinkMetricsController" class="sgf.gateway.web.controllers.metrics.OffsiteLinkMetricsController"/>

</beans>
