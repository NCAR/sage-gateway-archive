<?xml version="1.0" encoding="UTF-8"?>

<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
                           http://www.springframework.org/schema/beans/spring-beans-4.0.xsd">

    <bean id="groupController" class="sgf.gateway.web.controllers.group.RegistrationGroupController">
        <constructor-arg index="0" ref="runtimeUserService"/>
    </bean>

    <bean id="addRegistrationFieldController" class="sgf.gateway.web.controllers.group.AddRegistrationFieldController">
        <constructor-arg index="0" ref="accountService"/>
        <constructor-arg index="1" ref="runtimeUserService"/>
    </bean>

    <bean id="addExistingRegistrationFieldController"
          class="sgf.gateway.web.controllers.group.AddExistingRegistrationFieldController">
        <constructor-arg index="0" ref="groupRepository"/>
        <constructor-arg index="1" ref="accountService"/>
        <constructor-arg index="2" ref="runtimeUserService"/>
    </bean>

    <bean id="deleteRegistrationFieldController"
          class="sgf.gateway.web.controllers.group.DeleteRegistrationFieldController">
        <constructor-arg index="0" ref="groupRepository"/>
        <constructor-arg index="1" ref="accountService"/>
        <constructor-arg index="2" ref="runtimeUserService"/>
    </bean>

</beans>
