    <!--<bean id="throwSocketException" class="sgf.gateway.web.controllers.exception.stub.ThrowSocketException" />-->
    <!--<bean id="throwRuntimeException" class="sgf.gateway.web.controllers.exception.stub.ThrowRuntimeException" />-->

</beans>