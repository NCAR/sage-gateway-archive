<?xml version="1.0"?>

<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping>

    <class name="sgf.gateway.model.workspace.DataTransferRequestError" table="data_transfer_request_error"
           schema="workspace">

        <id name="identifier" column="id" access="field" type="integer"/>

        <property name="message" column="message" type="string" length="255"/>
    </class>


    <query name="findDataTransferRequestError" cacheable="false">
        <![CDATA[
            from DataTransferRequestError dataTransferRequestError where (dataTransferRequestError.message = :message)
        ]]>
    </query>

</hibernate-mapping>
