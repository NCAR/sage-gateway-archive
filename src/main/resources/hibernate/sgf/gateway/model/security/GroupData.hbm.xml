<?xml version="1.0"?>

<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping>

    <class name="sgf.gateway.model.security.GroupData" table="group_data" schema="security">

        <id name="identifier" column="id" access="field">
            <type name="sgf.gateway.utils.hibernate.UUIDUserType"/>
        </id>
        <version name="version" column="version" unsaved-value="null" access="field"/>

        <property name="name" column="name" type="string" not-null="true" unique="true"/>
        <property name="description" column="description" type="text" not-null="true"/>
        <property name="value" column="value" type="text"/>

        <property name="type" column="group_data_type_id">
            <type name="sgf.gateway.utils.hibernate.EnumUserType">
                <param name="enumClassName">sgf.gateway.model.security.GroupDataType</param>
                <param name="columnType">INTEGER</param>
            </type>
        </property>

    </class>

</hibernate-mapping>
