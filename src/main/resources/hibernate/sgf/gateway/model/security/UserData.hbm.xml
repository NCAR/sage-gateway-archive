<?xml version="1.0"?>

<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping>

    <class name="sgf.gateway.model.security.UserData" table="user_data" schema="security">

        <id name="identifier" column="id" access="field">
            <type name="sgf.gateway.utils.hibernate.UUIDUserType"/>
        </id>
        <version name="version" column="version" unsaved-value="null" access="field"/>

        <property name="value" column="value" type="text" not-null="true"/>

        <many-to-one name="groupData" column="group_data_id" class="sgf.gateway.model.security.GroupData"
                     cascade="none"/>
        <many-to-one name="user" column="user_id" class="sgf.gateway.model.security.User" cascade="none"/>

    </class>

</hibernate-mapping>
