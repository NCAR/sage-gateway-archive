<?xml version="1.0"?>

<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping>

    <class name="sgf.gateway.model.security.Permission" table="permission" schema="security">

        <id name="identifier" column="id" access="field">
            <type name="sgf.gateway.utils.hibernate.UUIDUserType"/>
        </id>
        <version name="version" column="version" unsaved-value="null" access="field"/>

        <many-to-one name="dataset" class="sgf.gateway.model.metadata.DatasetImpl" column="dataset_id" not-null="true"
                     cascade="none" access="field"/>

        <!-- Note: principal is NOT lazy-loaded to be able to discriminate between Group and User subclasses -->
        <many-to-one name="principal" class="sgf.gateway.model.security.Principal" column="principal_id" not-null="true"
                     cascade="none" lazy="false" access="field"/>

        <property name="operation" column="operation_id" access="field">
            <type name="sgf.gateway.utils.hibernate.EnumUserType">
                <param name="enumClassName">sgf.gateway.model.security.Operation</param>
                <param name="columnType">INTEGER</param>
            </type>
        </property>

    </class>

</hibernate-mapping>
