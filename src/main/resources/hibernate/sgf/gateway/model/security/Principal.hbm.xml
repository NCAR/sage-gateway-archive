<?xml version="1.0"?>

<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping>

    <class name="sgf.gateway.model.security.Principal" table="principal" schema="security">
        <cache usage="read-write"/>

        <id name="identifier" column="id" access="field">
            <type name="sgf.gateway.utils.hibernate.UUIDUserType"/>
        </id>

        <version name="version" column="version" unsaved-value="null" access="field"/>

        <set name="permissions" inverse="true" lazy="true" cascade="all-delete-orphan">
            <key column="principal_id"/>
            <one-to-many class="sgf.gateway.model.security.Permission"/>
        </set>

        <property name="dateCreated" column="date_created" type="java.util.Date" access="field"/>

    </class>

</hibernate-mapping>