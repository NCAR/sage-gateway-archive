<?xml version="1.0"?>

<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping>

    <class name="sgf.gateway.model.metadata.activities.modeling.ForcingImpl" table="forcing" schema="metadata">

        <id name="identifier" column="id" type="sgf.gateway.utils.hibernate.UUIDUserType" access="field"/>

        <version name="version" column="version" unsaved-value="null" access="field"/>

        <property name="name" column="name" type="string" not-null="true" access="field"/>
        <property name="value" column="value" type="string" access="field"/>
        <property name="description" column="description" type="string" access="field"/>
        <property name="type" column="type" access="field">
            <type name="sgf.gateway.utils.hibernate.EnumUserType">
                <param name="enumClassName">sgf.gateway.model.metadata.activities.modeling.ForcingType</param>
                <param name="columnType">INTEGER</param>
            </type>
        </property>

    </class>

    <query name="findForcingByName" cacheable="false">
        <![CDATA[
            from ForcingImpl forcing where forcing.name = :name
        ]]>
    </query>

</hibernate-mapping>
