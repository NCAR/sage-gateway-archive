<?xml version="1.0"?>

<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping>

    <joined-subclass name="sgf.gateway.model.metadata.activities.modeling.EnsembleImpl"
                     extends="sgf.gateway.model.metadata.activities.ActivityImpl" table="ensemble" schema="metadata">
        <key column="id"/>
    </joined-subclass>

    <query name="findEnsembleByName" cacheable="false">
        <![CDATA[
            from EnsembleImpl ensemble where ensemble.name = :name
        ]]>
    </query>

</hibernate-mapping>
