<?xml version="1.0"?>

<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping>

    <class name="sgf.gateway.model.metadata.descriptive.Institution" table="institution" schema="metadata">

        <id name="identifier" column="id" type="sgf.gateway.utils.hibernate.UUIDUserType" access="field"/>

        <version name="version" column="version" unsaved-value="null" access="field"/>

        <property name="name" column="name" type="string" not-null="true" access="field"/>

    </class>

    <query name="findInstitutions" cacheable="true">
        <![CDATA[
            from Institution institution order by institution.name
        ]]>
    </query>

    <query name="findInstitutionByName" cacheable="false">
        <![CDATA[
            from Institution institution where upper(institution.name) = upper(:name)
        ]]>
    </query>

</hibernate-mapping>
