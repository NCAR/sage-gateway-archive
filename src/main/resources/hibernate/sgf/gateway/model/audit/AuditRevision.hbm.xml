<?xml version="1.0"?>

<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping>

    <class name="sgf.gateway.envers.AuditRevision" schema="audit" table="revision">

        <id name="id" column="id" access="field" type="long">
            <generator class="native"/>
        </id>

        <property name="revisionDate" column="revision_date" access="field" type="timestamp"/>

        <property name="userId" column="user_id" access="field" type="sgf.gateway.utils.hibernate.UUIDUserType"/>

        <property name="username" column="username" access="field" type="string"/>

        <property name="openId" column="openid" access="field" type="string"/>

    </class>


</hibernate-mapping>
